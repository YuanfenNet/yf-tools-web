{
    "name": "yf-tools-web",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "dev": "nuxt dev",
        "build": "nuxt build",
        "preview": "nuxt preview",
        "generate": "nuxt generate",
        "postinstall": "nuxt prepare",
        "version": "git add . && git commit -m \"v$npm_package_version\"",
        "postversion": "git tag $npm_package_version && git push && git push --tags",
        "deploy": "yarn version --no-git-tag-version",
        "lint": "eslint . --ext .vue,.js,.ts --fix --ignore-path .gitignore --cache",
        "format": "prettier --write --cache .",
        "prepare": "husky install",
        "commit": "git-cz"
    },
    "dependencies": {
        "@codemirror/lang-json": "^6.0.1",
        "@codemirror/language": "^6.9.0",
        "@lezer/highlight": "^1.1.6",
        "@sentry/browser": "^7.68.0",
        "@sentry/vue": "^7.68.0",
        "@vueuse/core": "^10.4.1",
        "@vueuse/nuxt": "^10.4.1",
        "codemirror": "^6.0.1",
        "crypto-js": "^4.1.1",
        "eslint-plugin-prettier": "^5.0.0",
        "js-base64": "^3.7.5",
        "jsonlint-mod": "^1.7.6",
        "jspdf": "^2.5.1",
        "luxon": "^3.4.3",
        "sortablejs": "^1.15.0",
        "sortablejs-vue3": "^1.2.9",
        "vue-codemirror": "^6.1.1",
        "vue-drag-zone": "2.0.0-rc1",
        "vue-json-viewer": "^3.0.4"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@commitlint/cz-commitlint": "^17.7.1",
        "@element-plus/nuxt": "^1.0.5",
        "@nuxt/content": "^2.8.2",
        "@nuxt/devtools": "latest",
        "@nuxtjs/color-mode": "^3.3.0",
        "@nuxtjs/eslint-config-typescript": "^12.1.0",
        "@nuxtjs/eslint-module": "^4.1.0",
        "@sentry/vite-plugin": "^2.7.1",
        "@types/crypto-js": "^4.1.2",
        "@types/luxon": "^3.3.2",
        "@types/node": "^18.17.15",
        "@types/sortablejs": "^1.15.2",
        "commitizen": "^4.3.0",
        "element-plus": "^2.3.12",
        "eslint": "^8.49.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-nuxt": "^4.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "nuxt": "^3.7.1",
        "nuxt-gtag": "^1.0.0",
        "nuxt-simple-sitemap": "^3.2.7",
        "prettier": "^3.0.3",
        "sass": "^1.66.1",
        "sass-loader": "^13.3.2"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "lint-staged": {
        "*.{vue,js,ts}": "eslint --fix"
    }
}
